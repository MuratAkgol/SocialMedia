@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kayıt Ol</title>
    <!--Style Sheet-->
    <link href="~/stylesheet.css" rel="stylesheet" />
    <!--FontAwesome CDN-->
    <script src="https://kit.fontawesome.com/d74d237bf1.js" crossorigin="anonymous"></script>
</head>
<body>
    <!--Üst Menü-->
    <header>
        <h2 class="logo" style="text-align:center">Kayıt Ol</h2>
        <nav class="navigation">
            <a href="/Home/Login">Ana Sayfa</a>
        </nav>
    </header>
    <!--Alt Menü-->
    <div style="padding-top:100px;">
        <div class="wrapper">
            <div class="form-box register">
                <h2>Kayıt Ol</h2>
                <form asp-action="KayitOl" asp-controller="Home" method="post">
                    <div class="input-box">
                        <span class="icon"><i class="fa-solid fa-user"></i></span>
                        <input type="text" name="KullaniciAdi" required />
                        <label>Kullanıcı Adı</label>
                    </div>

                    <div class="input-box">
                        <span class="icon"><i class="fa-solid fa-envelope"></i></span>
                        <input type="email" name="NickName" required />
                        <label>E-Mail</label>
                    </div>

                    <div class="input-box">
                        <span class="icon"><i class="fa-solid fa-lock"></i></span>
                        <input type="password" name="Sifre" required />
                        <label>Şifre</label>
                    </div>
                    <button type="submit" class="btn" onclick="alarm()">Kayıt Ol</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
