
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giriş Yapın</title>
    <!--Style Sheet-->
	<link href="~/stylesheet.css" rel="stylesheet" />
    <!--FontAwesome CDN-->
    <script src="https://kit.fontawesome.com/d74d237bf1.js" crossorigin="anonymous"></script>
    <!--Bootstrap CDN-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script>
        if (@ViewBag.hatali == 1)
        alert("Giriş bilgileri hatalı");
    </script>

</head>
<body>
    <!--Üst Menü-->
    <header>
        <h2 class="logo">Social Media</h2>

        <nav class="navigation">
            <a href="/Home/Hakkimizda">Hakkımızda</a>
            <a href="/Home/Iletisim">İletişim</a>
            <button class="btnLogin-popup" id="btnKayitOl">Kayıt Ol</button>
        </nav>
    </header>
    <!--Alt Menü-->
    <div style="padding-top:100px;">
    <div class="wrapper">
        <div class="form-box login">
            <h2>Giriş Yap</h2>
                <form asp-action="Login" asp-controller="Home" method="post">
                <div class="input-box"> 
                    <span class="icon"><i class="fa-solid fa-envelope"></i></span>
                        <input name="KullaniciAdi" type="text" />
                    <label>Kullanıcı Adı</label>
                </div>

                <div class="input-box">
                    <span class="icon"><i class="fa-solid fa-lock"></i></span>
                        <input name="Sifre" type="password" />
                    <label>Şifre</label>
                </div>

                    <button type="submit" class="btn btn-secondary">Giriş Yap</button>
            </form>
        </div>
    </div>
    </div>
</body>
</html>

<!--Kayıt Ol sayfasına yönlendirme-->
<script>
    document.getElementById("btnKayitOl").addEventListener("click", function () {
        window.location.href = "/Home/KayitOl";
    });
</script>

