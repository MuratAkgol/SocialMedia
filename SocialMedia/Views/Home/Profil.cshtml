@using EntityLayer
 @model List<Social>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil</title>
    <!--Style Sheet-->
    <link href="~/stylesheet.css" rel="stylesheet" />
    <style>
        /* Profil bölümü */
        .profile {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
        }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            overflow: hidden;
            margin-bottom: 20px;
        }

            .profile-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .profile-info {
            text-align: center;
        }

        .profile-name {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .profile-username {
            color: #777;
            font-size: 18px;
            margin-bottom: 20px;
        }

        .profile-bio {
            color: #333;
            font-size: 16px;
            line-height: 1.5;
            margin-bottom: 20px;
        }

        /* Paylaşımlar bölümü */
        .feed {
            background-color: #f8f8f8;
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
        }

        .feed-item {
            border-bottom: 1px solid #eee;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }

            .feed-item:last-child {
                border-bottom: none;
                padding-bottom: 0;
                margin-bottom: 0;
            }

        .feed-item-content {
            font-size: 14px;
            color: #333;
            line-height: 1.5;
        }

        .feed-item-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

            .feed-item-actions a {
                text-decoration: none;
                color: #777;
                font-size: 12px;
            }

        /* Düzenleme bölümü */
        .edit-profile {
            text-align: center;
            margin-top: 20px;
        }

            .edit-profile a {
                text-decoration: none;
                background-color: #007bff;
                color: #fff;
                padding: 10px 20px;
                border-radius: 5px;
                font-size: 14px;
                font-weight: bold;
            }
    </style>
</head>
<body>
    <!--Üst Menü-->
    <header>
        <h2 class="logo" style="text-align:center">Social Media</h2>

        <nav class="navigation">
            <a href="/Home/Index">Ana Sayfa</a>
        </nav>

        <nav class="navigation">
            <a href="/Home/Logout">Çıkış Yap</a>
        </nav>
    </header>

    <div style="padding-top:100px;">
        <div class="wrapper">
            <div class="form-box login">
    <div class="profile">
        <div class="profile-image">
            <img src="profile.jpg" alt="Profil Resmi">
        </div>
        <div class="profile-info">
            <div class="profile-name">@ViewBag.profilAdi</div>
            <div class="profile-username">@ViewBag.nickName</div>
            <div class="edit-profile">
                <a href="#">Profili Düzenle</a>
            </div>
        </div>
                    @foreach (var item in Model)
                    {
                        <div class="feed">
                            <div class="feed-item">
                                <div class="feed-item-content">

                                    @item.Icerik
                                </div>
                                <div class="feed-item-actions">
                                    <a href="#">Beğen</a>
                                    <a href="#">Yorum Yap</a>
                                </div>
                            </div>
                        </div>

                    }
    </div>
    </div>
    </div>
    </div>
</body>
</html>
